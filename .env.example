# HOA Scout Environment Variables
# Copy this file to .env.local and fill in your actual values

# ============================================
# Supabase Configuration
# ============================================
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api

# Public URL - Safe to expose to the browser
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
# Example: https://abcdefghijklmnop.supabase.co

# Anonymous Key - Safe to expose to the browser (respects RLS)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Service Role Key - NEVER expose to the browser! Only use server-side
# Has full access to bypass RLS policies
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================
# Anthropic Claude API
# ============================================
# Get your API key from: https://console.anthropic.com/
# Used for AI-powered HOA analysis
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================
# Yelp Fusion API
# ============================================
# Get your API key from: https://www.yelp.com/developers/v3/manage_app
# Used for neighborhood context and local business data
# Rate limit: 5000 requests/day on free tier
YELP_API_KEY=your_yelp_api_key_here

# ============================================
# Google Maps API (Optional but Recommended)
# ============================================
# Get your API key from: https://console.cloud.google.com/
# Enable the Geocoding API
# Used for address to coordinates conversion
# If not provided, falls back to basic geocoding
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ============================================
# Application Settings
# ============================================
# Base URL for the application (automatically set on Vercel)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Node environment
NODE_ENV=development

# ============================================
# Optional: Future Features
# ============================================
# Stripe for payments (if implementing premium features)
# STRIPE_SECRET_KEY=your_stripe_secret_key_here
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# SendGrid for email notifications (if implementing email features)
# SENDGRID_API_KEY=your_sendgrid_api_key_here

# ============================================
# Development Only
# ============================================
# Set to 'true' to enable detailed logging
DEBUG=false

# Set to 'true' to use mock data instead of real APIs (for development)
USE_MOCK_DATA=false